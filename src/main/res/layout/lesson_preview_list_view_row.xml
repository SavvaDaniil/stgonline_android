<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="H,16:9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            android:background="@drawable/round_outline"
            android:padding="2dp"
            >

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <ImageView
                    android:id="@+id/lesson_poster_image_view"
                    tools:ignore="ContentDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/preview_default"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="false"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/round_dark_filter"
                    />

            </androidx.cardview.widget.CardView>

        </FrameLayout>

        <TextView
            android:id="@+id/labelLessonTypeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="тип урока"
            android:textColor="#fff"
            android:textAlignment="center"
            android:fontFamily="@font/gotham_pro_light"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <TextView
            android:id="@+id/labelLessonName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lesson Name"
            android:textColor="#fff"
            android:textSize="28dp"
            android:textAlignment="center"
            android:fontFamily="@font/sf_trans_robotics_extended_italic"
            android:paddingTop="40dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <TextView
            android:id="@+id/labelTeacherName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="teacher"
            android:textColor="#fff"
            android:textSize="16sp"
            android:fontFamily="@font/gotham_pro_light"
            android:layout_marginBottom="18dp"
            android:layout_marginEnd="18dp"
            android:gravity="right"

            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <TextView
            android:id="@+id/labelIsAIAvailable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AI AVAILABLE"
            android:textColor="#fff"
            android:textSize="12sp"
            android:fontFamily="@font/gotham_pro_light"
            android:layout_marginBottom="18dp"
            android:layout_marginStart="18dp"
            android:gravity="right"
            android:visibility="gone"

            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <ImageView
            android:id="@+id/blockLock"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:padding="3dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="18dp"
            android:src="@drawable/icon_lock"
            android:background="@drawable/lock_bgd_round"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

