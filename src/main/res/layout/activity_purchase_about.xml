<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controller.PurchaseAboutActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
        <TextView
            android:id="@+id/lessonAboutHeaderTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="О покупке"
            android:textSize="20sp"
            android:textColor="#fff"
            android:fontFamily="@font/gotham_pro_medium"
            />
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="28dp"
            android:layout_height="28dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/icon_back"
            android:background="@color/transparent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/description_block_bgd_round"
            android:layout_margin="15dp"
            >
            <TextView
                android:id="@+id/purchaseAboutTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Оплата:"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:fontFamily="@font/gotham_pro_medium"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/purchaseAboutName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Наименование урока"
                android:layout_marginTop="2dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:fontFamily="@font/gotham_pro_light"
                android:textColor="@color/white"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/gotham_pro_medium"
                android:text="Идентификатор платежа:"
                android:textSize="12dp"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/purchaseAboutPaymentId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/gotham_pro_light"
                android:textSize="12dp"
                android:textColor="@color/white"
                android:text="#000"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/gotham_pro_medium"
                android:text="Дата платежа:"
                android:textSize="12dp"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/purchaseAboutDateOfPayed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/gotham_pro_light"
                android:textSize="12dp"
                android:textColor="@color/white"
                android:text="00.00.0000"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/gotham_pro_medium"
                android:text="Сумма платежа:"
                android:textSize="12dp"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/purchaseAboutPaymentPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/gotham_pro_light"
                android:textSize="12dp"
                android:textColor="@color/white"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/gotham_pro_medium"
                android:text="Идентификатор покупки:"
                android:textSize="12dp"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/purchaseAboutPurchaseId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/gotham_pro_light"
                android:textSize="12dp"
                android:textColor="@color/white"
                android:text="#000"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/gotham_pro_medium"
                android:text="На сколько дней:"
                android:textSize="12dp"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/purchaseAboutDays"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/gotham_pro_light"
                android:textSize="12dp"
                android:textColor="@color/white"
                android:text="30"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/gotham_pro_medium"
                android:text="Дата активации:"
                android:textSize="12dp"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/purchaseAboutDateOfActivation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/gotham_pro_light"
                android:textSize="12dp"
                android:textColor="@color/white"
                android:text="- не активировано"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/gotham_pro_medium"
                android:text="Дата окончания действия:"
                android:textSize="12dp"
                android:textColor="@color/white"
                />
            <TextView
                android:id="@+id/purchaseAboutDateOfMustBeUsedTo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/gotham_pro_light"
                android:textSize="12dp"
                android:textColor="@color/white"
                android:text="- не активировано"
                />



        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>